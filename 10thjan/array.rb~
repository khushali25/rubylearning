#Array
arr=[12,15,10]
puts arr
puts arr.reverse
puts arr.length
puts arr.max
puts arr.min
puts "array elements are:"+arr.to_s
puts "sorted array: #{arr.sort}"


arr1=["abc","abd","bcg"]
puts arr1
puts arr1.reverse
puts arr1.length
puts arr1.max
puts arr1.min
puts "array elements are:"+arr1.to_s
puts "sorted array: #{arr1.sort}"

#Only first occurrence will be replaced using sub(substitution)
str="Ruby is a dynamic, reflective, object-oriented,dynamic,general-purpose programming language."
puts "str= #{str}"

str1=str['dynamic']='static'
puts str1

str2=str.sub('dynamic','static')
puts "str2= #{str2}"

#All the occurrence will be replaced using gsub(global substitution)
str3=str.gsub('dynamic','static')
puts "str3= #{str3}"

#reverse String
str4=str.reverse
puts str4

#lines reverse
string="Ruby is a dynamic, reflective, 
     object-oriented,dynamic
     general-purpose programming language."
str5=string.lines.to_a.reverse
puts "str5 = #{str5}"

#put reverse lines together into single string
str6=string.lines.to_a.reverse.join
puts "str6 = #{str6}"

#convert string to lowercase
str7=str.downcase
puts str7

#delete operation in string
str8=str.delete(" ")
puts str8

str9=str.delete("dy")
puts str9

